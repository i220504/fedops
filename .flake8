[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .flwr,
    mlruns,
    data,
    logs

ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file
    F401,  # imported but unused (handled separately)

per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811

max-complexity = 10
